<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="./build/css/estilos.css" rel="stylesheet" />
    <link href="./build/css/user.css" rel="stylesheet" />
    <title>Productos</title>
    <link rel="stylesheet" href="estilos.css" />
  </head>
  <body onload="Listar()">
    <div class="d-flex justify-content-center">
      <form>
        <h1 class="d-flex justify-content-center">Ventas</h1>
        <div class="d-flex justify-content-center">
          <div>
            <div class="m-3">
              <label for="">Producto</label><br />
              <input type="text" id="Prod" />
            </div>
            <div class="m-3">
              <label for="">Cantidad</label><br />
              <input type="number" id="Cant" />
            </div>
            <div class="m-3">
              <label for="">Cliente</label><br />
              <input type="text" id="Cli" />
            </div>
            <div class="m-3">
              <label for="">Precio</label><br />
              <input type="number" id="Pre" />
            </div>
            <div class="d-flex justify-content-center m-3">
              <button type="button" id="enviar" class="btn btn-success">Enviar</button> &nbsp;
              <button type="button" id="cancelar" class="btn btn-danger">Cancelar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div id="contForm">
      <form id="editarForm">
        <h1 class="d-flex justify-content-center">Editar un producto</h1>
        <div class="d-flex justify-content-center">
          <div>
            <div class="m-3">
              <label for="">Producto</label><br />
              <input type="text" id="Prod2" />
            </div>
            <div class="m-3">
              <label for="">Cantidad</label><br />
              <input type="number" id="Cant2" />
            </div>
            <div class="m-3">
              <label for="">Cliente</label><br />
              <input type="text" id="Cli2" />
            </div>
            <div class="m-3">
              <label for="">Precio</label><br />
              <input type="number" id="Pre2" />
            </div>
            <div class="d-flex justify-content-center m-3">
              <button type="button" id="editar" class="btn btn-success">Editar</button> &nbsp;
              <button type="button" id="cancelar2" onclick="abrirEditar()" class="btn btn-danger">Cancelar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div>
      <table class="table table-striped table-info">
        <thead>
          <tr>
            <td>Producto</td>
            <td>Cantidad</td>
            <td>Cliente</td>
            <td>Precio</td>
            <td class="acciones">Acciones</td>
            <td class="acciones"></td>
          </tr>
        </thead>
        <tbody id="bodyTable"></tbody>
      </table>
    </div>
    <script src="build/js/funciones.js"></script>
  </body>
</html>
